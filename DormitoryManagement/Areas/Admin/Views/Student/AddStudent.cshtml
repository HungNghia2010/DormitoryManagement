
@{
    ViewData["Title"] = "Thêm Sinh Viên";
}
@model DormitoryManagement.Models.StudentAccount

<div id="content-wrapper">
    <div class="container-fluid justify-content-center">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <h2 class="text-center text-gray-800">Thêm Loại Phòng</h2>

                <!-- Form thay đổi mật khẩu -->
                @using (Html.BeginForm("AddStudent", "Student", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="FullName">Tên sinh viên:</label>
                        @Html.TextBoxFor(m => m.FullName, new
                        {
                            @class = "form-control",
                            @id = "FullName",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="UserName">Tài khoản:</label>
                        @Html.TextBoxFor(m => m.UserName, new
                        {
                            @class = "form-control",
                            @id = "UserName",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="Password">Mật khẩu:</label>
                        @Html.TextBoxFor(m => m.Password, new
                        {
                            @class = "form-control",
                            @id = "Password",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="Email">Email:</label>
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "form-control",
                            @id = "Email",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="PhoneNumber">Số điện thoại:</label>
                        @Html.TextBoxFor(m => m.PhoneNumber, new
                        {
                            @class = "form-control",
                            @id = "PhoneNumber",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="Address">Địa chỉ:</label>
                        @Html.TextBoxFor(m => m.Address, new
                        {
                            @class = "form-control",
                            @id = "Address",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="Gender">Giới tính:</label>
                        @Html.TextBoxFor(m => m.Gender, new
                        {
                            @class = "form-control",
                            @id = "Gender",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="ImagePath">Ảnh đại diện:</label>
                        <input type="file" @Html.TextBoxFor(m => m.ImagePath, new { @class = "form-control", @id = "ImagePath", @required = "required" })
                    </div>
                    <div class="form-group">
                        <label for="RoomID">Số phòng:</label>
                        @Html.TextBoxFor(m => m.RoomID, new
                        {
                            @class = "form-control",
                            @id = "RoomID",
                            @required = "required"
                        })
                    </div>
                    <div class="form-group">
                        <label for="BuildingID,">Số tòa:</label>
                        @Html.TextBoxFor(m => m.BuildingID, new
                        {
                            @class = "form-control",
                            @id = "BuildingID,",
                            @required = "required"
                        })
                    </div>



                    <!-- Hiển thị thông báo lỗi nếu có -->
                    if (@ViewBag.Error != null)
                    {
                        <div class="form-group text-center">
                            <span class="alert alert-danger">@ViewBag.Error</span>
                        </div>
                    }

                    <!-- Hiển thị thông báo thành công nếu có -->
                    if (@ViewBag.Success != null)
                    {
                        <div class="form-group text-center">
                            <span class="alert alert-success">@ViewBag.Success</span>
                        </div>
                    }

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Thêm</button>
                    </div>
                }
            </div>


        </div>
    </div>
</div>
