
@{
    ViewBag.Title = "Student";

}
@model List<DormitoryManagement.Models.StudentAccount>

@section scripts{

    <script src="~/Areas/Admin/Fonts/js/script2.js"></script>
}

<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Loại Phòng</h1>
    <a class="btn btn-primary" href="https://localhost:44342/Admin/Student/AddStudent">Thêm Sinh Viên</a>


    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Mã Sinh Viên</th>
                            <th>Tài thoản</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Giới tính</th>
                            <th>Số phòng</th>
                            <th>Số tòa</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Mã Sinh Viên</th>
                            <th>Tài thoản</th>
                            <th>Họ tên</th>
                            <th>Email</th>
                            <th>Số điện thoại</th>
                            <th>Giới tính</th>
                            <th>Số phòng</th>
                            <th>Số tòa</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var type in Model)
                        {
                            <tr>
                                <td>@type.StudentID</td>
                                <td>@type.UserName</td>
                                <td>@type.FullName</td>
                                <td>@type.Email</td>
                                <td>@type.PhoneNumber</td>
                                <td>@type.Gender</td>
                                <td>@type.RoomID</td>
                                <td>@type.BuildingID</td>
                                <td class="text-center">
                                    <button type="button" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm" name="@type.UserName" data-id="@type.StudentID" data-toggle="modal" data-target="#deleteModal">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </td>

                            </tr>
                        }


                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">Xác nhận xóa</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Bạn có chắc chắn muốn xóa loại phòng này không?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
                    <button type="button" class="btn btn-danger" id="confirmDeleteStudent">Xóa</button>
                </div>
            </div>
        </div>
    </div>
</div>



