
@{
    ViewBag.Title = "Tạo học phí ký túc xá";

}

<div class="container mt-5">
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h2 class="text-center">Tạo học phí ký túc xá</h2>
        </div>
        <div class="card-body">
            <form id="feeForm">
                <div class="form-group">
                    <label for="semester">Học kỳ:</label>
                    <input type="text" class="form-control" id="semester" name="semester" required>
                </div>
                <div class="form-group">
                    <label for="content">Nội dung:</label>
                    <textarea class="form-control" id="description" rows="3" placeholder="Nhập nội dung"></textarea>
                </div>
                <div class="form-group">
                    <label for="dueDate">Ngày đóng:</label>
                    <input type="date" class="form-control" id="dueDate" name="dueDate" required>
                </div>
                <div class="form-group">
                    <label for="expiryDate">Ngày hết hạn:</label>
                    <input type="date" class="form-control" id="expiryDate" name="expiryDate" required>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">Tạo học phí</button>
                </div>
            </form>
        </div>
    </div>
</div>
