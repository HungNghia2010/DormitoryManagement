@{
    ViewBag.Title = "Room";

}



<div class="container-fluid">
    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Quản Lý Loại Phòng</h1>
    <button type="button" class="btn btn-primary">
        Thêm loại phòng
    </button>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Loại Phòng</th>
                            <th>Mô tả</th>
                            <th>Tiền phòng</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Loại Phòng</th>
                            <th>Mô tả</th>
                            <th>Tiền phòng</th>
                            <th>Actions</th>
                        </tr>
                    </tfoot>
                    <tbody>

                        
                            <tr>
                                <td>Phòng có máy lạnh</td>
                                <td>Phòng vip</td>
                                <td>500.000</td>
                                <td>
                                    <button type="button" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i> Edit
                                    </button>
                                    <button type="button" class="btn btn-danger btn-sm" onclick="deleteRow(1)">
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </td>

                            </tr>
                        

                    </tbody>
                </table>
            </div>
        </div>
    </div>

</div>



