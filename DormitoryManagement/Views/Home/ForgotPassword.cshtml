@{
    Layout = null;
    ViewBag.Title = "Login";
}
@model DormitoryManagement.Models.StudentAccount
<!DOCTYPE html>
<html lang="en">
<head>
    <title>Login V18</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!--===============================================================================================-->
    <link rel="icon" type="image/png" href="images/icons/favicon.ico" />
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/AssetsLogin/vendor/bootstrap/css/bootstrap.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/fonts/font-awesome-4.7.0/css/font-awesome.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/fonts/Linearicons-Free-v1.0.0/icon-font.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/vendor/animate/animate.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/vendor/css-hamburgers/hamburgers.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/vendor/animsition/css/animsition.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/vendor/select2/select2.min.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/vendor/daterangepicker/daterangepicker.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/css/util.css">
    <link rel="stylesheet" type="text/css" href="~/Resources/Assets/Login/css/main.css">
    <!--===============================================================================================-->
    <link rel="stylesheet" href="~/Resources/Assets/css/bootstrap.min.css">
</head>
<body style="background-color: #666666;">

    <div class="limiter">
        <div class="container-login100">
            <div class="wrap-login100">
                @using (Html.BeginForm("ForgotPassword", "Home", FormMethod.Post, new { @class = "login100-form validate-form" }))
                {


                    @Html.AntiForgeryToken()
                    if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Message
                        </div>
                    }


                    <span class="login100-form-title p-b-43">
                        Forgot Password
                    </span>


                    <div class="wrap-input100 validate-input" data-validate="Valid email is required: ex@abc.xyz">

                        <input class="input100" type="email" id="email" name="email" />
                        <span class="focus-input100"></span>
                        <span class="label-input100">Email</span>
                    </div>






                    <div class="container-login100-form-btn">
                        <button class="login100-form-btn">
                            Login
                        </button>
                    </div>


                    if (@ViewBag.Error != null)
                    {
                        <div class="form-group">
                            <span class="form-control-user text-danger">@ViewBag.Error</span>
                        </div>
                    }


                }


                <div class="login100-more" style="background-image: url('/Resources/Assets/Login/images/bg-01.jpg');">
                </div>
            </div>
        </div>
    </div>





    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/vendor/jquery/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/vendor/animsition/js/animsition.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/vendor/bootstrap/js/popper.js"></script>
    <script src="~/Resources/Assets/Login/vendor/bootstrap/js/bootstrap.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/vendor/select2/select2.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/vendor/daterangepicker/moment.min.js"></script>
    <script src="~/Resources/Assets/Login/vendor/daterangepicker/daterangepicker.js"></script>
    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/vendor/countdowntime/countdowntime.js"></script>
    <!--===============================================================================================-->
    <script src="~/Resources/Assets/Login/js/main.js"></script>

</body>
</html>


