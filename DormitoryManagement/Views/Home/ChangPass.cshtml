
@{
    ViewBag.Title = "Change Password";
}

@model DormitoryManagement.Data.ChangePass

@section scripts{
    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <script src="~/Areas/Admin/Fonts/js/script2.js">
    </script>
    <style>
        #passwordStrengthBar {
            height: 10px;
            transition: width 0.3s ease-in-out;
        }
    </style>

}


<div id="content-wrapper">
    <div class="container-fluid justify-content-center">
        <div class="row">
            <div class="col-lg-6 offset-lg-3">
                <h2 class="text-center text-gray-800">Change Password</h2>

                <!-- Form thay đổi mật khẩu -->
                @using (Html.BeginForm("ChangePass", "Homes", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        <label for="CurrentPassword">Current Password:</label>
                        @Html.PasswordFor(m => m.Password, new
                        {
                            @class = "form-control",
                            @id = "CurrentPassword",
                            @name = "CurrentPassword",
                            required = true,
                            maxlength = 15
                        })

                    </div>

                    <div class="form-group">
                        <label for="NewPassword">New Password:</label>
                        <div class="input-group">
                            @Html.PasswordFor(m => m.NewPassword, new
                            {
                                @class = "form-control",
                                @id = "NewPassword",
                                @name = "NewPassword",
                                required = true,
                                maxlength = 15
                            })
                        </div>

                        <div class="mt-2">
                            <div class="progress">
                                <div id="passwordStrengthBar" class="progress-bar" role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                            <small id="passwordStrengthText" class="form-text text-muted"></small>
                        </div>

                        <div id="passwordRequirements" style="display: none;">
                            <p>Password must be at least 8 characters long and contain at least one uppercase letter, one lowercase letter, and one digit.</p>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="ConfirmNewPassword">Confirm New Password:</label>
                        @Html.PasswordFor(m => m.ConfirmPassword, new
                            {
                                @class = "form-control",
                                @id = "ConfirmNewPassword",
                                @name = "ConfirmNewPassword",
                                required = true,
                                maxlength = 15
                            })

                    </div>

                    if (@ViewBag.Error != null)
                    {
                        <div class="form-group text-center">
                            <span class="form-control-user alert alert-danger">@ViewBag.Error</span>
                        </div>
                    }

                    if (@ViewBag.success != null)
                    {
                        <script>
                            $(document).ready(function () {
                                $('#successModal').modal('show');
                            });
                        </script>
                    }
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="successModal" tabindex="-1" role="dialog" aria-labelledby="successModalLabel" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="successModalLabel">Thành Công!</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    Mật khẩu của bạn đã được thay đổi thành công.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Đóng</button>
                </div>
            </div>
        </div>
    </div>
</div>

