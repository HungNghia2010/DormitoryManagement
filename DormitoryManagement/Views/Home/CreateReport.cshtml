
@{
    ViewBag.Title = "Create Report";
}
@model DormitoryManagement.Areas.Admin.Data.FeeData

<div class="back_re">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2>Create Report</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div id="content-wrapper">
    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h2 class="text-center text-gray-800 mb-5"></h2>

                <!-- Form chỉnh sửa phòng -->
                @Html.AntiForgeryToken()


                @using (Html.BeginForm("Payment", "Payment", FormMethod.Post))
                {
                    

                    <div class="form-group">
                        <label for="fee">Name Device: </label>
                        @Html.TextBoxFor(m => m.TotalAmount, new { @class = "form-control", @id = "Price", @name = "fee"})
                    </div>

                    <div class="form-group">
                        <label for="fee">Amount: </label>
                        @Html.TextBoxFor(m => m.TotalAmount, new { @class = "form-control", @id = "Price", @name = "fee", @type="number"})
                    </div>

                    

                    <div class="text-center mb-3">
                        <a>
                            <button type="submit" class="btn btn-success">Submit</button>
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>
    
</div>

