
@{
    ViewBag.Title = "Info";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model DormitoryManagement.Models.StudentAccount
<div class="back_re">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="title">
                    <h2>MY INFO</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!--  contact -->
<div class="contact">
    <div class="col-md-12 avatar">
        @if (Model.ImagePath != null)
        {
            <img src="@Model.ImagePath" alt="Avatar" class="avatar">
        }
        else
        {
            <img src="~/Resources/Assets/images/avatar.png" alt="Avatar" class="avatar">
        }

    </div>
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                @using (Html.BeginForm("UpdateInfo", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @class = "main_form", @id = "request" }))
                {
                    @Html.AntiForgeryToken()

                <div class="row">
                    <div class="col-md-6">

                        Full Name
                        @Html.TextBoxFor(m => m.FullName, new
                        {
                            @class = "contactus",
                            @id = "FullName",
                            @required = "required",
                            @type = "type"
                        })
                    </div>
                    <div class="col-md-6">

                        User Name
                        @Html.TextBoxFor(m => m.UserName, new
                       {
                           @class = "contactus",
                           @id = "UserName",
                           @required = "required",
                           @type = "type"
                       })
                    </div>

                    <div class="col-md-6">

                        Email
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "contactus",
                            @id = "Email",
                            @required = "required"
                        })
                    </div>
                    <div class="col-md-6">

                        Phone Number
                        @Html.TextBoxFor(m => m.PhoneNumber, new
                        {
                            @class = "contactus",
                            @id = "PhoneNumber",
                            @required = "required"
                        })
                    </div>
                    <div class="col-md-6">

                        Address
                        @Html.TextBoxFor(m => m.Address, new
                        {
                            @class = "contactus",
                            @id = "Address",
                            @required = "required"
                        })
                    </div>
                    <div class="col-md-6">

                        Gender
                        @Html.TextBoxFor(m => m.Gender, new
                        {
                            @class = "contactus",
                            @id = "Gender",
                            @required = "required"
                        })
                    </div>
                    <div class="col-md-6">

                        Room
                        @if (ViewBag.room != null)
                        {
                            <input class="contactus" id="RoomID" value="@ViewBag.room" disabled required />
                                }
                        else
                        {
                            <input class="contactus" id="RoomID" value="Chưa có phòng" disabled required />
                        }
                        
                    </div>

                    
                    <div class="col-md-6">

                        Building
                        @if (ViewBag.building != null)
                        {
                            <input class="contactus" id="BuildingID" value="@ViewBag.building" disabled required />
                        }
                        else
                        {
                            <input class="contactus" id="RoomID" value="Chưa có tòa" disabled required />
                        }
                        
                    </div>
                </div>
                    <div class="col-md-12">
                        <button type="submit" class="send_btn">Update</button>
                    </div>

                }

            </div>
        </div>  
    </div>
    <!-- end contact -->
